{
    "name": "wakedock-frontend",
    "version": "1.1.0",
    "description": "WakeDock Frontend - Modern SvelteKit Dashboard for Docker Container Management",
    "type": "module",
    "scripts": {
        "dev": "vite dev --host 0.0.0.0 --port 3000",
        "build": "svelte-kit sync && vite build",
        "build:debug": "vite build --mode development --debug",
        "preview": "vite preview --host 0.0.0.0 --port 4173",
        "start": "node build/index.js",
        "start:debug": "node --inspect=0.0.0.0:9229 build/index.js",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:build": "npm run build && test -f build/index.js && echo 'Build test passed' || echo 'Build test failed'",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "ci": "npm run format:check && npm run lint && npm run type-check && npm run test:run && npm run build",
        "optimize:images": "node scripts/optimize-images.js",
        "build:analyze": "vite build && open build/stats.html",
        "prepare": "husky install"
    },
    "keywords": [
        "docker",
        "orchestration",
        "management",
        "dashboard",
        "svelte",
        "sveltekit",
        "typescript",
        "containers",
        "devops",
        "wakedock"
    ],
    "author": {
        "name": "WakeDock Team",
        "email": "team@wakedock.com",
        "url": "https://wakedock.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/kihw/wakedock-frontend.git"
    },
    "bugs": {
        "url": "https://github.com/kihw/wakedock-frontend/issues"
    },
    "homepage": "https://wakedock.com",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^7.0.2",
        "@sveltejs/adapter-node": "^2.1.2",
        "@sveltejs/kit": "^2.22.2",
        "@sveltejs/vite-plugin-svelte": "^3.1.2",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/svelte": "^5.2.8",
        "@testing-library/user-event": "^14.6.1",
        "@tsconfig/svelte": "^5.0.4",
        "@types/node": "^22.7.5",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^2.1.9",
        "autoprefixer": "^10.4.20",
        "axe-core": "^4.10.3",
        "cssnano": "^7.0.7",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.44.1",
        "husky": "^8.0.0",
        "jsdom": "^25.0.1",
        "lint-staged": "^16.1.2",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.7",
        "rollup-plugin-visualizer": "^6.0.3",
        "svelte": "^4.2.20",
        "svelte-check": "^4.0.4",
        "tailwindcss": "^3.4.13",
        "terser": "^5.43.1",
        "typescript": "^5.6.3",
        "vite": "^5.4.19",
        "vite-bundle-analyzer": "^0.23.0",
        "vitest": "^2.1.9"
    },
    "dependencies": {
        "@fontsource/inter": "^5.1.0",
        "@types/dompurify": "^3.0.5",
        "dompurify": "^3.2.6",
        "lucide-svelte": "^0.451.0",
        "polka": "^0.5.2",
        "svelte-spa-router": "^4.0.1"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "postcss": {
        "plugins": {
            "tailwindcss": {},
            "autoprefixer": {}
        }
    },
    "prettier": {
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 100,
        "plugins": [
            "prettier-plugin-svelte"
        ],
        "overrides": [
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2020,
            "extraFileExtensions": [
                ".svelte"
            ]
        },
        "env": {
            "browser": true,
            "es2017": true,
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "*.svelte"
                ],
                "processor": "svelte/svelte"
            }
        ]
    },
    "volta": {
        "node": "20.18.0",
        "npm": "10.8.2"
    },
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{css,scss,postcss}": [
            "prettier --write"
        ],
        "*.{md,json,yaml,yml}": [
            "prettier --write"
        ]
    }
}